@model EventStoreApp.Models.Entities.Event

@{
    ViewData["Title"] = "Мероприятие";
    Layout = "_Layout";
}

<h2>Мероприятие</h2>

<form asp-action="Create" asp-controller="Event" method="post" class="form-horizontal">
<h4>Информация о мероприятии</h4>    
  <hr />
  <div asp-validation-summary="All" class="text-danger"></div>
  <div class="form-group">
    <label class="control-label col-md-2" asp-for="ShortName"></label>
    <div class="col-md-10">
      <input asp-for="ShortName" class="form-control" />
      <span asp-validation-for="ShortName" class="text-danger"></span>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-2" asp-for="Name"></label>
    <div class="col-md-10">
      <input asp-for="Name" class="form-control" />
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-2" asp-for="DateBegin"></label>
    <div class="col-md-10">
      <input asp-for="DateBegin" class="form-control datepicker" />
      <span asp-validation-for="DateBegin" class="text-danger"></span>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-2" asp-for="DateEnd"></label>
    <div class="col-md-10">
      <input asp-for="DateEnd" class="form-control datepicker" />
      <span asp-validation-for="DateEnd" class="text-danger"></span>
    </div>
  </div>
    <!--Описание-->
 <div class="form-group">
     <label class="control-label col-md-2" asp-for="Description">Описание</label>
     <div class="col-md-10">
         <textarea cols ="40" rows="5" asp-for="Description"></textarea>
         <span asp-validation-for="Description" class="text-danger"></span>
     </div>         
 </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" value="Выполнить" class="btn btn-lg btn-success"/>
    </div>
  </div>
</form>

<div>
  <a asp-action="Index" asp-controller="Event">Назад к списку</a>
</div>

@section Scripts{
  <script>
      $(function () {
          $(".datepicker").datetimepicker({ locale: 'ru' });
      });
  </script>
}